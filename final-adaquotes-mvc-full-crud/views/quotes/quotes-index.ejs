<% include ../partials/boilerplate %>

<a href='/quotes/add'>Add a quote!</a>

<div class='quotes'>
  <% quotesData.forEach(function(quote) { %>
    <div class='my-quote'>
      <h3><%= quote.content %></h3>
      <div class='meta'>
        <span class='author'><%= quote.author %></span>
        <span class='genre'><%= quote.genre_id %></span>
      </div>
      <a href='/quotes/<%= quote.id %>'>Go to page</a>
      <a href='/quotes/edit/<%= quote.id %>'>Edit quote</a>
      <form method='POST' action='/quotes/<%= quote.id %>?_method=DELETE'>
        <input type='submit' value='Delete it!' />
      </form>
    </div>
  <% }) %>
</div>

<% include ../partials/end %>
